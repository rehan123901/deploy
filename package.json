{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Personal portfolio website for Syed Rehan Ahmed",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd routes/client && npm start",
    "build": "cd routes/client && npm run build",
    "install-client": "cd routes/client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "setup": "node setup.js",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["portfolio", "react", "nodejs", "mongodb"],
  "author": "Syed Rehan Ahmed",
  "license": "MIT"
}
